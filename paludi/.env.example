# Environment Configuration for Paludi Coffee Shop System
# Copy this file to .env and replace with actual values

# Application Environment
NODE_ENV=production

# Database Configuration
DB_NAME=paludi_db
DB_USER=paludi_user
DB_PASSWORD=change_this_secure_password_123
DB_HOST=postgres
DB_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password_456

# JWT Configuration
JWT_SECRET=change_this_to_a_very_long_random_secret_key_min_32_chars
JWT_EXPIRATION=24h

# API Configuration
API_PORT=4000

# Frontend Ports
POS_PORT=3001
MOBILE_PORT=3002
ADMIN_PORT=3003

# Nginx Configuration
NGINX_PORT=80

# Application Settings
MAX_UPLOAD_SIZE=10485760
SESSION_TIMEOUT=3600
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@paludi.com
SMTP_PASSWORD=change_this_smtp_password
SMTP_FROM=Paludi Coffee <noreply@paludi.com>

# Payment Gateway (Optional)
PAYMENT_GATEWAY_API_KEY=your_payment_gateway_key_here
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret_here

# Monitoring (Optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=

# Feature Flags
ENABLE_LOYALTY_PROGRAM=true
ENABLE_MOBILE_ORDERING=true
ENABLE_GIFT_CARDS=true
